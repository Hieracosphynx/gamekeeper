---
import type { BoardGamePluginManifest } from "@/content.config"

type BoardGamePluginCardProps = {
  plugin: BoardGamePluginManifest;
  boardGameSlug: string;
}


const { plugin, boardGameSlug } = Astro.props as BoardGamePluginCardProps
---

<a href={`/games/${boardGameSlug}/${plugin.slug}`} class="block group">
  <div class="overflow-hidden rounded-lg border bg-card text-card-foreground shadow-sm hover:bg-accent/5 transition-colors">

    <!-- Card Content -->
    <div class="p-4">
      <!-- Header -->
      <div class="flex justify-between items-start mb-2">
        <div class="flex-1">
          <h3 class="font-semibold text-lg leading-none tracking-tight mb-1">
            {plugin.name}
          </h3>
        </div>
      </div>

      <!-- Description -->
      <p class="text-sm text-muted-foreground leading-relaxed mb-3">
        {plugin.description}
      </p>
    </div>
  </div>
</a>
